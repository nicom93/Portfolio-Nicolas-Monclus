---
import Layout from "@/layouts/Layout.astro";
import Briefcase from "@/components/icons/Briefcase.astro"
import SectionContainer from "@/components/SectionContainer.astro";
import Experience from "@/components/Experience.astro";
import Projects from "@/components/Projects.astro";
import Code from "@/components/icons/Code.astro";
import ProfileCheck from "@/components/icons/ProfileCheck.astro";
import Hero from "@/components/Hero.astro";
import AboutMe from "@/components/AboutMe.astro";
import Designs from "@/components/Designs.astro";
import Palette from "@/components/icons/Palette.astro";
---

<Layout 
	title="Nicolás Monclús | Frontend Developer & UX Designer"
	description="Contrata a Nicolás Monclús para diseñar las aplicaciones y webs mas lindas"
>
	<main class="px-4">
		<SectionContainer class="py-16 md:py-36">
			<Hero/>
		</SectionContainer>

		<SectionContainer id="experiencia" class="mb-24">
			<h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white">
				<Briefcase class="size-8" />
				Experiencia laboral
			</h2>
			<Experience />
		</SectionContainer>
		<SectionContainer id="proyectos" class="mb-24">
			<h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white">
				<Code class="size-8" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>
		<SectionContainer id="diseños" class="mb-24">
			<h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white">
				<Palette class="size-8" />
				Diseños
			</h2>
			<Designs />
		</SectionContainer>
		<SectionContainer id="sobre-mi" class="mb-24">
			<h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white">
				<ProfileCheck class="size-8" />
				Sobre mí
			</h2>
			<AboutMe />
		</SectionContainer>
	</main>
</Layout>
